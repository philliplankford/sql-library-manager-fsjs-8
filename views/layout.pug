doctype html

html
  head
    title Books
    link(rel='stylesheet', href="../static/stylesheets/style.css")
  body
    h1 Books 
    p 
      a.button(href="/books/new") Create New Book
    table 
      thead 
        tr 
          th Title 
          th Author 
          th Genre 
          th Year 
      tbody 
        each book in books
          tr 
            th 
              a(href=`/books/${book.id}`)= book.title
            th= book.author 
            th= book.genre 
            th= book.year 